    <div class="middle-box text-center loginscreen">
    <div>
        <p>Preencha todos os campos</p>
        <div class="form-group">
            <input type="text" class="form-control" ng-model="user.name" placeholder="Nome" required="">
        </div>       
        <div class="form-group">
            <input type="email" class="form-control" ng-model="user.email" placeholder="Email" required="">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" ng-model="user.pwd" placeholder="Senha" required="">
        </div>

        <button type="button" ng-click="save()" ng-disabled="isProcessing" class="btn btn-primary block full-width m-b">Criar conta</button>    

        <a class="btn btn-sm btn-white btn-block" href="#/login">Cancelar</a>
        <p class="m-t"> <small>FlixIMDB &copy; 2018</small> </p>
    </div>
</div>